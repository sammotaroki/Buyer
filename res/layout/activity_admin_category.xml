<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminCategoryActivity">

    <TextView
            android:id="@+id/slogan_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:text="Add new product"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textStyle="bold"
            />

    <LinearLayout
            android:id="@+id/linear_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/slogan_category"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="45dp">

                <ImageView
                        android:id="@+id/t_shirt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/t_shirt"
                />

                <ImageView
                         android:id="@+id/jersey_shirt"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/jersey"
                />
                <ImageView
                        android:id="@+id/dresses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dress"
                />
                <ImageView
                        android:id="@+id/sweaters"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:src="@drawable/jacket"
                        android:layout_marginStart="16dp"
                />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linear2_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_category_layout"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="45dp">

        <ImageView
                android:id="@+id/garden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/garden"
        />

        <ImageView
                android:id="@+id/books"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/books"
        />
        <ImageView
                android:id="@+id/beauty"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/beauty"
        />
        <ImageView
                android:id="@+id/baby_stuff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baby_stuff"
                android:layout_marginStart="16dp"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linear3_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear2_category_layout"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="45dp">

        <ImageView
                android:id="@+id/accessories"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/accessories"
        />

        <ImageView
                android:id="@+id/gadgets"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/gadgets"
        />
        <ImageView
                android:id="@+id/motors"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/vehicles"
        />
        <ImageView
                android:id="@+id/houses"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/homes"
                android:layout_marginStart="16dp"
        />
    </LinearLayout>
</RelativeLayout>